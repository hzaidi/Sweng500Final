@import "variables.styl"
.cmpt-landing-page-dashboard-link {
	.bar{
		color: $ap-light-grey-4;
		display: flex;
		line-height: 2;
		margin-bottom: 0.2em;
		background: $baseColorLight;
	  border-color: #111111 #0a0a0a black;
		border-radius: 5px;
		div {
			font-size: 1.5vh;
			padding: 5px;
			cursor: pointer;
		}
		.title{
			flex: 0.8;
		}
		.input{
			flex: 1;
			margin: 0;
	    border-radius: 0;
	    border-bottom: 0;
	    border-top: 0;
			box-shadow: none;
			user-select: none;
		}
		.clipboard{
			position: relative;
			background: darken($baseColorLight,20%);
		  -webkit-box-shadow: inset 0 0px rgba(255, 255, 255, 0.1), 0 0px 0px rgba(0, 0, 0, 0.2);
		  box-shadow: inset 0 0px rgba(255, 255, 255, 0.1), 0 0px 0px rgba(0, 0, 0, 0.2);
			text-align: center;
			flex: 0.2;
		}

	}
	.load-more{
		cursor: pointer;
		color: $ap-dark-grey-3;
		text-align: center;
	}

	.copied::after {
	  position: absolute;
	  top: 12%;
	  right: 110%;
	  display: block;
	  content: "copied";
	  font-size: 0.75em;
	  padding: 2px 3px;
	  color: #fff;
	  background-color: $mediumBlue;
	  border-radius: 3px;
	  opacity: 0;
	  will-change: opacity, transform;
	  animation: showcopied 1.5s ease;
	}

	@keyframes showcopied {
	  0% {
	    opacity: 0;
	    transform: translateX(100%);
	  }
	  70% {
	    opacity: 1;
	    transform: translateX(0);
	  }
	  100% {
	    opacity: 0;
	  }
	}
}
