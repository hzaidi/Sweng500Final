@import "variables.styl"
.cmpt-dashboard-overall-progress {
	.cmpt-ui-pulse{
		.pulse_holder{
			top: 52%;
	    left: -26px;
		}
	}
	.objective-bar--stats{
    display: flex;
		.committed, .stretch {
      flex: 1;
			.cmpt-ui-simple-progress-bar{
				.arrow-status{
					span{
						font-size: 2vw;
					}
					sup{
						font-size: 1.2vw;
						margin-top: 1.5vh;
					}
				}
			}
    }
		.committed, .stretch {
      .status {
          float: right;
          color $ap-light-grey-4;
      }
			.title{
				font-size: 1.0vw;
				margin-bottom: 5px;
			}
    }
		.committed {
        flex-grow: 2;
        margin-right: 1%;

        .title {
            color: $mediumGreen;
        }
    }

    .stretch {
        .title {
            color: $darkBlue;
        }
    }
  }
}
