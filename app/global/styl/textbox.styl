@import "variables.styl"
.input{
	width: 100%;
	margin: 5px 0;
	box-sizing: border-box;
	display: inline-block;
	padding: 6px 12px;
	font-size: 14px;
	font-weight: 400;
	line-height: 1.42857143;
	box-shadow: 1px 1px 3px rgba(0, 27, 42, .8);
  border: 1px solid #08496a;
  background: rgba(0, 66, 85, .2);
	color: $ap-light-grey-4;
	border-radius: 2px;
	vertical-align: top;
	
}
