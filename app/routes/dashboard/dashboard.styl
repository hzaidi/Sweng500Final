@import "variables.styl";
.route-dashboard-dashboard {
	.dashboard-body{
		display: flex;
		opacity: 1;
		transition: opacity 200ms linear;
		.left-section{
			padding: 28px 20px 0 20px;
			height: calc(100vh - 68px);
			flex: 1;
			.cmpt-dashboard-overall-progress{
				margin: 0 50px;
			}
			.objective-bar--timeline{
				margin: 0 50px;
				padding-bottom: 60px;
				border-bottom: 1px solid #1f395d;
				display: flex;
				.cmpt-ui-time-line{
					flex: 2 0 0;
					margin-right: 1%;
				}
				.empty{
					flex: 1 0 0;
				}
			}
			.doughnuts{
				margin-top: 40px;
				display: flex;
				.doughnut-commitments, .doughnut-stretch{
					flex: 1;
				}
			}
		}
		.right-section{
			padding: 28px 20px 0 20px;
			height: calc(100vh - 28px);
			background: $augmentedColorDark;//linear-gradient(to bottom, $augmentedColorDark  0, $augmentedColorLight 100%);
			border-left: 1px solid #1f395d;
			flex: 1;
			.title{
				color: $darkBlue;
        padding: 0 0 20px 0;
        text-align: center;
        font-size: 30px;
			}
			.header{
				display: flex;
				.empty{
					flex: 1.3 0 0;
					margin-right: 5px;
				}
				.commitment{
					margin-bottom: 4px;
					font-size: 20px;
					padding: 0 4px;
					color: $mediumGreen;
					flex: 2 0 0;
				}
				.stretch{
					margin-bottom: 4px;
					font-size: 20px;
					padding: 0 4px;
					color: $darkBlue;
					flex: 1 0 0;
				}
			}
		}
		.cmpt-ui-toggle-switch{
			position: absolute;
			bottom: 0;
			right: 0;
		}
		&.panel-open{
			opacity: 0.1;
		}
	}
}
